<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cream</item>
        <item name="colorPrimaryDark">@color/dark</item>
        <item name="colorAccent">@color/pinky</item>
    </style>


    <style name="text_main_black" parent="TextAppearance.AppCompat">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/btn_border_selector</item>
        <item name="android:buttonBarPositiveButtonStyle">@drawable/btn_border_selector</item>
    </style>
